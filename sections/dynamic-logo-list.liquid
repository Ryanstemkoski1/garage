<script type="application/pxs-animation-mapping+json">
  {
    "blocks": [".logolist--inner"],
    "elements": [
      ".logolist--item"
    ]
  }
</script>
<style>
  .logolist--item.pxu-lia-element {
    width: calc(100%/5 - 21px);
    margin: 0;
    background-color: #EEE7E7;
    border-radius: 6px;
    padding: 18px 17px;
}

.logolist--inner {
    display: flex;
    flex-flow: row wrap;
    gap: 26px;
}

.logolist--link {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
      text-decoration: none;
    gap: 16px;
}
  .logo-image {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background-color: #fff;
    max-width: 116px;
    width:100%;
    padding:5px;
    min-height:54px;
}
  .logolist--link span {
    max-width: calc(100% - 132px);
    font-family: 'Poppins';
    font-weight: 600;
    font-size: 18px;
    color: #000000;
    text-align: left;
}

.logolist--image:hover {
    transform: scale(1);
}
  section.logolist--container {
    max-width: 1450px;
    margin: 0 auto;
}

.logolist--inner {
    margin-left: 0;
    margin-right: 0;
}
  @media(max-width:1400px){
    .logolist--inner {
    display: flex
;
    flex-flow: row wrap;
    gap: 20px;
}
        .logolist--item.pxu-lia-element {
    width: calc(100%/4 - 15px);
}
  }
  @media(max-width:1100px){
    .logolist--inner{    gap: 15px;
    padding-left: 30px;
    padding-right: 30px;}
    .logolist--item.pxu-lia-element {
    width: calc(100%/3 - 15px);
}
.logo-image {
    max-width: 90px;
}
.logolist--link span {
    font-size: 14px;
    max-width: calc(100% - 100px);
}
.logolist--link {
    gap: 10px;
}
  }
  @media(max-width:767px){
    .logolist--item.pxu-lia-element {
    width: calc(100% / 2 - 5px);
    padding: 10px;
    min-height: 103px;
}

.logolist--inner {
    padding-left: 15px;
    padding-right: 15px;
    gap: 10px;
}

.logolist--link {
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.logolist--link span {
    width: 100%;
    display: block;
    max-width: 100%;
    text-align: center;
}

.logolist--inner {
    align-items: flex-start;
}
  }
</style>
<section class="logolist--container">
  {% if section.settings.title != blank %}
    <h2 class="home-section--title">
      {{ section.settings.title | escape }}
    </h2>
  {% endif %}

  <div class="home-section--content logolist--inner">
    {% for block in section.blocks %}
      <div class="logolist--item" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a
            class="logolist--link"
            href="{{ block.settings.link }}"
            target="_blank"
          >
        {% endif %}
        <div class="logo-image">
        {% if block.settings.image %}
          {%
            render 'rimg',
            img: block.settings.image,
            class: 'logolist--image',
            size: '160x160',
            lazy: true,
            canvas: true,
            focal_point: block.settings.image.presentation.focal_point,
          %}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder--image logolist--image' }}
        {% endif %}
        </div>
            {% if block.settings.image_text %}
                <span>{{ block.settings.image_text }}</span>
            {% endif %}

        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.logo_list.name",
  "class": "logolist--section",
  "max_blocks": 18,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.logo_list.title.label",
      "default": "Logo list"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "t:sections.logo_list.blocks.logo.name",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "t:sections.logo_list.blocks.logo.image.label",
          "info": "t:sections.logo_list.blocks.logo.image.info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.logo_list.blocks.logo.link.label"
        },
        {
          "type": "text",
          "id": "image_text",
          "label": "Logo Text"
        }
      
        
      ]
    }
  ],
  "presets": [
    {
      "category": "t:sections.logo_list.presets.logo_list.category",
      "name": "t:sections.logo_list.presets.logo_list.name",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["*"]
  }
}
{% endschema %}