{% assign filter_block = nil %}
{% assign sidebar_blocks = false %}
{% assign menu_block_count = 0 %}

{% for block in section.blocks %}
  {% if block.type == 'filter' %}
    {% assign filter_block = block %}
    {% assign sidebar_blocks = true %}
  {% elsif block.type == 'menu' %}
    {% assign sidebar_blocks = true %}
    {% assign menu_block_count = menu_block_count | plus: 1 %}
  {% endif %}
{% endfor %}

{% assign filter_type = 'tag' %}
{% if filter_block and filter_block.settings.filter_option == 'faceted' %}
  {% assign filter_type = 'faceted' %}
{% endif %}

{%- capture section_type -%}
  {% if filter_type == 'faceted' %}
    static-collection-faceted-filters
  {% else %}
    static-collection
  {% endif %}
{%- endcapture -%}

{% assign current_tag_handles = '' %}

{% for tag in current_tags %}
  {% assign current_tag = tag | handle %}
  {% assign current_tag_handles = current_tag_handles | append: current_tag %}
  {% unless forloop.last %}
    {% assign current_tag_handles = current_tag_handles | append: '|' %}
  {% endunless %}
{% endfor %}

{% assign current_tag_array = current_tag_handles | split: '|' %}


<script
  type="application/json"
  data-section-type="{{ section_type | strip }}"
  data-section-id="{{ section.id }}"
  data-section-data
>
  {
    "show_filter_product_count": {{ filter_block.settings.show_filter_product_count | json }},
    "product_count": {{ collection.products_count | json }},
    "filter_type": {{ filter_type | json }},
    "filter_groups": {{ filter_block.settings.filter_groups | json }},
    "filter_style": {{ filter_block.settings.filter_style | json }},
    "no_matched_products_text": {{ 'general.accessibility.no_matched_products' | t: tag: '*tag*' | json }},
    "context": {
      "see_more": {{ 'general.general.see_more' | t | json }},
      "see_less": {{ 'general.general.see_less' | t | json }},
      "grid_list": {{ section.settings.default_view | json }},
      "collectionUrl": {{ collection.url | default: '/collections/all' | json }},
      "current_tags": {{ current_tag_array | json }}
    },
    "enable_product_compare": {{ settings.enable_product_compare | json }}
  }
</script>


{% assign show_sidebar = false %}
{% assign show_filters = true %}
{% assign show_filter_trigger = false %}

{% style %}
  #shopify-section-{{ section.id }} .subcollections-list__content {
    grid-template-columns: repeat(7, minmax(auto, 1fr));
  }
  @media only screen and (max-width: 860px) {
    #shopify-section-{{ section.id }} .subcollections-list__content {
      grid-template-columns: repeat(5, minmax(auto, 1fr));
    }
  }
  @media only screen and (max-width: 480px) {
    #shopify-section-{{ section.id }} .subcollections-list__content {
      grid-template-columns: repeat(3, minmax(auto, 1fr));
    }
  }
{% endstyle %}

{% if filter_block == nil or filter_block.settings.filter_option == 'tag' and collection.all_tags.size == 0 %}
  {% assign show_filters = false %}
{% endif %}

{% if sidebar_blocks %}
  {% comment %}
    Sidebar toggle is used on mobile only, and will only show Filters
  {% endcomment %}

  {% if show_filters %}
    {% assign show_filter_trigger = true %}
  {% endif %}

  {% if sidebar_blocks or show_filters %}
    {% comment %}
      Sidebar to show only if there are tags in the collection, or there are menus
    {% endcomment %}
    {% assign show_sidebar = true %}
  {% endif %}
{% endif %}

{% assign paginate_by = section.settings.products_per_page_range %}

{%- capture collection_classes -%}
  {% if show_sidebar %}
    layout--has-sidebar
  {% else %}
    layout--no-sidebar
  {% endif %}

  {% if section.settings.default_view == 'grid-view' %}
    productgrid-gridview
  {% else %}
    productgrid-listview
  {% endif %}
{%- endcapture -%}

{% render 'breadcrumbs' %}

{% paginate collection.products by paginate_by %}
  <div class="productgrid--outer {{ collection_classes | strip_newlines }}" data-productgrid-outer>
    <div class="productgrid--masthead">

      {% if section.settings.show_collection_image and collection.image %}
        <figure class="collection--image">
          {%
            render 'rimg',
            img: collection.image,
            size: '1350x',
            lazy: true,
            canvas: true
          %}
        </figure>
      {% endif %}

      <h1 class="collection--title">
        {{ collection.title }}
      </h1>

      <!-- custom collection description starts -->
      {% if collection.description != blank %}
        <div class="collection--description rte" data-collection-description>
          {{ collection.description }}
        </div>
      {% endif %}
      <!-- custom collection description ends -->
      {% assign blogcou = 0 %}
      {% for article in blogs['news'].articles %}
        {% if article.tags contains collection.title %}
          {% assign blogcou = forloop.index0 %}
        {% endif %}
      {% endfor %}
      {% if collection.metafields.custom.product_collection != blank or collection.metafields.custom.brand_collection != blank or blogcou > 0 %}
      <div class="collection-tab-wrapper">
        <div class="collection-page-width">
          <div class="tab-list">
            <div class="tab-wrap-title">
              {% if collection.metafields.custom.product_collection != blank %}<div class="tab-item-1 active"  data-id="tab-1">Products ({{ collection.all_products_count }})</div>{% endif %}
              {% assign highlightss = collection.metafields.custom.brand_collection.value %}
              {% assign brand_image = highlightss.brand_image.value %}
              {% assign  totbrand = 0  %}
              {% for imagee in brand_image %}
                {% assign indexxxx = forloop.index0 %}
                  {% assign totbrand = indexxxx | plus: 1 %}
              {% endfor %}
              {% if collection.metafields.custom.brand_collection != blank %}<div class="tab-item-2">Brands ({{ totbrand }})</div>{% endif %}
              {% if blogcou > 0  %}<div class="tab-item-3">Expert Advice ({{ blogcou }})</div>{% endif %}
            </div>
          </div>

      <!-- custom product collection starts -->
        {% if collection.metafields.custom.product_collection != blank %}
        <div class="product-collection-wrapper splide splide-product">
          <div class="product-collection active splide__track">
            {% assign highlights = collection.metafields.custom.product_collection.value %}
              {% assign coll_image = highlights.collection_image.value %}
              {% assign coll_title = highlights.collection_title.value %}
              {% assign coll_description = highlights.collection_description.value %}
              {% assign coll_url = highlights.collection_url.value %}
              <div class="tab-content pro-tab splide__list">
                {% for image in coll_image %}
                  {% assign index = forloop.index0 %}
                  <div class="tab-content--{{ index | plus: 1 }} product-tab-data splide__slide">
                      <div class="product-coll-content">
                        <div class="product-image"><img src="{{ image | image_url: width: 100 }}" alt="{{ labels[index] }}"></div>
                        <div class="product-title"><div class="product-name">{{ coll_title[index] }}</div></div>
                        <div class="product-description"><p>{{ coll_description[index] }}</p></div>
                        <div class="product-url"><a href="{{ coll_url[index] }}">Shop Now</a></div>  
                      </div>
                  </div>
                {% endfor %}
              </div>
          </div>
        </div>
      {% endif %}
      <!-- custom product collection ends -->
      
      <!-- custom brand collection starts -->
        {% if collection.metafields.custom.brand_collection != blank %}
                  <div class="product-collection-wrapper splide splide-brand">
            <div class="brand-collection splide__track">
                  {% assign highlightss = collection.metafields.custom.brand_collection.value %}
                  {% assign brand_image = highlightss.brand_image.value %}
                  {% assign brand_title = highlightss.brand_title.value %}
                  {% assign brand_description = highlightss.brand_description.value %}
                  {% assign brand_url = highlightss.brand_url.value %}
                  <div class="tab-content brand-tab splide__list">
                    {% for imagee in brand_image %}
                      {% assign indexx = forloop.index0 %}
                        <div class="tab-content--{{ indexx | plus: 1 }} product-tab-data splide__slide">
                            <div class="product-coll-content">
                              <div class="product-image"><img src="{{ imagee | image_url: width: 100 }}" alt="{{ labels[indexx] }}"></div>
                              <div class="product-title"><div class="product-name">{{ brand_title[indexx] }}</div></div>
                              <div class="product-description"><p>{{ brand_description[indexx] }}</p></div>
                              <div class="product-url"><a href="{{ brand_url[indexx] }}">Shop Now</a></div>
                            </div>
                        </div>
                    {% endfor %}
                  </div>
            </div>
          </div>
      {% endif %}
       <!-- custom brand collection ends -->
          
       <!-- custom blog collection starts -->
          {% assign blogcou = 0 %}
          {% for article in blogs['news'].articles %}
            {% if article.tags contains collection.title %}
              {% assign blogcou = forloop.index %}
            {% endif %}
          {% endfor %}
        {% if blogcou > 0  %}
        <div class="blog-collection">
             {% assign blog_handle = 'news' %}
              <section class="blog--container">
                <ul class="blog--inner">
                    {% for article in blogs[blog_handle].articles %}
                      {% if article.tags contains collection.title %}
                       {%
                          render 'article-excerpt',
                          article: article
                          %}
                      {% endif %}
                        {% endfor %}
                  
                </ul>
              </section>
        </div>
    {% endif %}
       <!-- custom blog collection ends -->
    </div>
  </div>
  {% endif %}
      
     

      {% if section.settings.enable_subcollection and linklists[collection.handle].links.size > 0 %}
        {%
          render 'subcollections-collection',
          type: 'block',
          block: section,
          layout_type: 'slideshow',
        %}
        <div class="subcollections-collection__border"></div>
      {% endif %}
    </div>
    {% if show_sidebar %}
      {%
        render 'product-grid-sidebar',
        menu_depth: section.settings.menu_depth_range,
        context: collection
      %}
    {% endif %}

    <div class="productgrid--wrapper">

      {% if show_filter_trigger or section.settings.sort_by or section.settings.grid_list %}
        {% capture utility_class %}
          productgrid--utils

          {% if show_filter_trigger or section.settings.sort_by or section.settings.grid_list %}
            productgrid--utils--visible-mobile
          {% endif %}

          {% unless section.settings.sort_by or section.settings.grid_list %}
            productgrid--utils--hidden-desktop
          {% endunless %}
        {% endcapture %}
        <div class="productgrid--utils-sticky-intersection" data-utils-intersection-target></div>
        <nav
          class="
            {{ utility_class | strip_newlines }}
            productgrid--utils-container
            productgrid--utils-sticky
          "
          aria-label="{{ 'general.accessibility.nav_collection_utilities' | t }}"
          data-sticky-utils
        >
          {% if show_filter_trigger %}
            {% liquid
              assign filter_count = 0
              if filter_block.settings.filter_option == 'faceted'
                for filter in collection.filters
                  if filter.type == 'price_range' and filter.min_value.value or filter.max_value.value
                    assign filter_count = filter_count | plus: 1
                  elsif filter.type == 'list'
                    assign filter_count = filter_count | plus: filter.active_values.size
                  endif
                endfor
              else
                if current_tags.size > 0
                  assign filter_count = current_tags.size
                endif
              endif
            %}
            <div class="productgrid--utils utils-filter">
              <button
                class="utils-filter-button"
                type="button"
                aria-label="{{ 'product_grid.filters.title_count' | t: count: filter_count }}"
                data-productgrid-trigger-filters
              >
                <span class="utils-filter-icon">
                  {% render 'icon-library', id: 'icon-filters' %}
                </span>
                <span class="utils-filter-text">
                  {{- 'product_grid.filters.title_count' | t: count: filter_count -}}
                </span>
              </button>
            </div>
          {% endif %}

          {%- if section.settings.sort_by -%}
            {%-
              render 'product-grid-sortby',
              type: 'select',
            -%}
          {%- endif -%}

          {% if section.settings.grid_list or settings.enable_product_compare %}
            <div
              class="
                productgrid--utils
                utils-view
                {% if section.settings.grid_list == false %}
                  utils-hide
                {% endif %}
              "
            >
              <div class="utils-view-container">
                {% if settings.enable_product_compare %}
                  <div class="utils-compare-toggle">
                    <span class="utils-compare-toggle__label">
                      {{ 'product_compare.compare' | t }}
                    </span>

                    <div class="utils-compare-toggle__container">
                      <input
                        class="
                          utils-compare-toggle__checkbox
                          visually-hidden
                        "
                        id="utils-compare-toggle__checkbox"
                        aria-label="{{ 'product_compare.compare' | t }}"
                        type="checkbox"
                        data-compare-toggle
                      >

                      <label class="utils-compare-toggle__checkbox-label" for="utils-compare-toggle__checkbox"></label>

                      {%
                        render 'icon-library',
                        id: 'icon-checkmark',
                        icon_class: 'utils-compare-toggle__checkbox-icon',
                      %}
                    </div>
                  </div>
                {% endif %}

                {% if section.settings.grid_list %}
                  <div class="utils-viewtoggle">
                    <span class="utils-viewtoggle-label">
                      {{ 'product_grid.view_as.title' | t }}
                    </span>

                    <button
                      class="utils-viewtoggle-button {% if section.settings.default_view == 'grid-view' %}active{% endif %}"
                      data-collection-view="grid-view"
                      aria-label="grid view"
                    >
                      {% render 'icon-library', id: 'icon-grid' %}
                    </button>

                    <button
                      class="utils-viewtoggle-button {% if section.settings.default_view == 'list-view' %}active{% endif %}"
                      data-collection-view="list-view"
                      aria-label="list view"
                    >
                      {% render 'icon-library', id: 'icon-list' %}
                    </button>
                  </div>
                {% endif %}
              </div>
            </div>
          {%- endif -%}
        </nav>
      {% endif %}

      {% if filter_block.settings.filter_option == 'faceted' %}

        {% assign active_filters = false %}
        {% for filter in collection.filters %}
          {% if filter.active_values.size > 0 or filter.min_value.value or filter.max_value.value %}
            {% assign active_filters = true %}
            {% break %}
          {% endif %}
        {% endfor %}

        {% if active_filters == true %}
          <div class="productgrid--filters">
            {%-
              render 'product-grid-filters-active',
              context: collection,
            %}
          </div>
        {% endif %}
      {% else %}
        {% if current_tags.size > 0 %}
          <div class="productgrid--filters">
            {%- render 'product-grid-tags-active' %}
          </div>
        {% endif %}
      {% endif %}

      {% if collection.products.size > 0 %}
        <ul
          class="
            productgrid--items
            products-per-row-{{- section.settings.products_per_row -}}
          "
          data-html="productgrid-items"
          data-productgrid-items
        >
          {% for product in collection.products %}
            {%- if product.metafields.inventory.ShappifyHidden == 'true' -%}{%- continue -%}{%- endif -%}
            {%
              render 'product-grid-item',
              product: product
            %}
          {% endfor %}
        </ul>
      {% else %}
        <div class="productgrid--no-results">
          <h2 class="productgrid--no-results-title">
            {%- if collection.all_products_count == 0 -%}
              {{ 'product_grid.no_results.empty' | t }}
            {%- else -%}
              {{ 'product_grid.no_results.tags_empty' | t }}
            {%- endif -%}
          </h2>

          <a class="productgrid--no-results-button" href="{{ routes.all_products_collection_url }}">
            {{ 'search.general.view_all_products' | t }}
          </a>
        </div>
      {% endif %}

      {%
        render 'pagination', paginate: paginate,
        grid_list: true
      %}
    </div>
  </div>
{% endpaginate %}

{%- if section.settings.sort_by -%}
  {%-
    render 'product-grid-sortby',
    type: 'modal',
  -%}
{%- endif -%}

{% render 'quick-shop' %}

<script>
 
  document.addEventListener("DOMContentLoaded", function () {
    
  const productTab = document.querySelector(".tab-item-1");
  const brandTab = document.querySelector(".tab-item-2");
  const blogTab = document.querySelector(".tab-item-3");

  const productCollection = document.querySelector(".product-collection");
  const brandCollection = document.querySelector(".brand-collection");
  const blogCollection = document.querySelector(".blog-collection");
  const progrid = document.querySelector('.productgrid--wrapper');
  if(productTab){
    new Splide('.splide-product', {
  type: 'slide',    
  perPage: 5,       
  perMove: 5,       
  focus: 'left',    
  arrows: true,     
  pagination: false,
  drag: true,       
  gap: 20,          
  trimSpace: true,
  breakpoints : {
      1100: { 
          perPage: 4,
          perMove: 4,
      },
      900: { 
      perPage: 3,
      perMove: 3,
      },
      600: { 
      perPage: 2,
      perMove: 2,
      },
  },
}).mount(); 
  productTab.addEventListener("click", function () {
    if(brandCollection){
        brandCollection.classList.remove('active');
      }
      if(productCollection){
        productCollection.classList.add('active');
     
      }
      if(blogCollection){
        blogCollection.classList.remove('active');
      }
    progrid.style.display = "block";

    productTab.classList.add("active");
    brandTab.classList.remove("active");
    blogTab.classList.remove("active");
  });
}
  if(brandTab){
        new Splide('.splide-brand', {
  type: 'slide',    
  perPage: 5,       
  perMove: 5,       
  focus: 'left',    
  arrows: true,     
  pagination: false,
  drag: true,       
  gap: 20,          
  trimSpace: true,
  breakpoints : {
      1100: { 
          perPage: 4,
      },
      900: { 
      perPage: 3,
      },
      600: { 
      perPage: 2,
      },
  },
}).mount();
     brandTab.addEventListener("click", function () {
      setTimeout(function(){
     
       var flickityElements = document.querySelectorAll('.tab-content.brand-tab');

       },10);
      if(brandCollection){
        brandCollection.classList.add('active');
     
      }
      if(productCollection){
        productCollection.classList.remove('active');
      }
      if(blogCollection){
        blogCollection.classList.remove('active');
      }
      progrid.style.display = "block";
      brandTab.classList.add("active");
      productTab.classList.remove("active");
      blogTab.classList.remove("active");
  });
  }
   if(blogTab){
    blogTab.addEventListener("click", function () {
      if(brandCollection){
        brandCollection.classList.remove('active');  
      }
      if(productCollection){
        productCollection.classList.remove('active');
      }
      if(blogCollection){
        blogCollection.classList.add('active');
      }
      progrid.style.display = "none";
  
      brandTab.classList.remove("active");
      productTab.classList.remove("active");
      blogTab.classList.add("active");
    });
   }

});

</script>
