{% comment %} <script src="{{ 'flickity.min.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="{{ 'flickity.min.css' | asset_url }}"> {% endcomment %}
{% comment %}
  @param product {Product}
    The product object in question or false. Onboards if false or blank.

  @param select_first_available_variant {Boolean}
    Whether to auto-select first available variant

  @param aspect_ratio {string}
    This is the gallery aspect ratio, can be one of 'natural', 'short', 'square', 'long'

  @param thumbnail_position {string}
    This is the gallery thumbnail position, can be one of 'below', or 'left'

  @param image_crop {boolean}
    Whether to crop images

  @param gallery_hover_zoom {String}
    This is the hover zoom setting, which is either 'disabled', 'separate', or 'replace'

  @param gallery_click_to_zoom {String}
    This is the click to zoom setting, which is either 'disabled', 'mobile', 'desktop', or 'always'
{% endcomment %}

{% assign onboarding = false %}
{% if product == false or product == blank %}
  {% assign onboarding = true %}
{% endif %}

{% assign selected_variant = product.selected_or_first_available_variant %}

{% if select_first_available_variant %}
  {% assign selected_media = selected_variant.featured_media | default: product.featured_media %}
{% else %}
  {% assign selected_media = product.featured_media %}
{% endif %}

<div
  class="
    product-gallery
    {% if gallery_hover_zoom != 'disabled' %}hover-zoom-enabled{% endif %}
    {% if gallery_click_to_zoom != 'disabled' and gallery_click_to_zoom != 'mobile' %}click-to-zoom-enabled{% endif %}
  "
  data-product-gallery
  {% if image_crop %}data-product-gallery-image-crop{% endif %}
  data-product-gallery-aspect-ratio="{{ aspect_ratio }}"
  data-product-gallery-thumbnails="{{ thumbnail_position }}"
>
  {%
    render 'product-gallery-viewer'
    product: product,
    selected_media: selected_media,
    aspect_ratio: aspect_ratio,
    image_crop: image_crop,
    gallery_hover_zoom: gallery_hover_zoom,
    onboarding: onboarding,
    gallery_click_to_zoom: gallery_click_to_zoom,
  %}

  {%
    render 'product-gallery-navigation'
    product: product,
    selected_media: selected_media,
    aspect_ratio: aspect_ratio,
    image_crop: image_crop
  %}

  {% assign first_model = product.media | where: "media_type", "model" | first %}
  {% if selected_media.media_type == 'model' %}
    {% assign model = selected_media %}
  {% else %}
    {% assign model = first_model %}
  {% endif %}
  {% if model %}
    <script>
      window.ShopifyXR=window.ShopifyXR||function(){(ShopifyXR.q=ShopifyXR.q||[]).push(arguments)}
      {% assign models = product.media | where: 'media_type', 'model' | json %}
      ShopifyXR('addModels', {{ models }});
    </script>
    <button
      class="product-gallery--viewinyourspace"
      data-default-model-id="{{ first_model.id }}"
      data-shopify-xr
      data-shopify-model3d-id="{{ model.id }}"
      data-shopify-title="{{ product.title }}"
      data-shopify-xr-hidden
    >
      {% render 'icon-library', id: 'icon-3D' %}
      {{ 'product.media.view_in_your_space' | t }}
    </button>
  {% endif %}
</div>

<script>

document.addEventListener('DOMContentLoaded', () => {
  var mainCarousel = document.querySelector('.product-gallery--viewerr');
var thumbnailsCarousel = document.querySelector('.gallery-navigation--scroller');

// Check how many thumbnails exist
var thumbnails = thumbnailsCarousel.querySelectorAll('.carousel-cell');

  var length = document.querySelectorAll('.carousel-cell').length;
  let counter = true;
  if(length == 1){
    counter = false;
  }
  console.log(counter);


  // Initialize the main carousel without arrows
  var flktyMain = new Flickity(mainCarousel, {
    cellAlign: 'center',
    contain: true,
    wrapAround: counter,
    pageDots: false,
    prevNextButtons: counter, // Disable arrows for the main carousel
    draggable: true
  });

  var length = document.querySelectorAll('.carousel-cell').length;
  let pos = 'center';
  if(length == 1){
    pos = 'left';
  }
  var length = document.querySelectorAll('.carousel-cell').length;
  let counter_slide = true;
  if(length <= 3){
    counter_slide = false;
  }
  console.log(counter_slide);
  

  // Initialize the thumbnails navigation with arrows
  var flktyNav = new Flickity(thumbnailsCarousel, {
    asNavFor: '.product-gallery--viewerr', // Sync with the main carousel
    contain: true,
    pageDots: false,
    prevNextButtons: counter_slide, // Enable arrows for thumbnail carousel
    wrapAround: false, // Allow wrapping
    groupCells: 1,
    freeScroll: true,
    cellAlign: pos,
    draggable: true,
    vertical: true
  });

  // Optional: Update the main carousel when clicking on a thumbnail
  thumbnailsCarousel.addEventListener('click', function(event) {
    var target = event.target.closest('.carousel-cell');
    if (!target) return;

    var index = flktyNav.getCellElements().indexOf(target);
    flktyMain.select(index); // Go to the clicked image
  });

  // Auto-select the first thumbnail in case there are no active selections
  flktyMain.on('select', function() {
    var selectedIndex = flktyMain.selectedIndex;
    flktyNav.selectCell(selectedIndex); // Sync the thumbnail selection
  });
  
  document.querySelectorAll('.options-selection__option-value').forEach(option => {
  option.addEventListener('click', function() {
      setTimeout(function(){
    const selectedThumbnail = document.querySelector('button[data-gallery-selected="true"]');
    if (selectedThumbnail) {
      selectedThumbnail.click();
    }
      },100);
  });
});

});
</script>
